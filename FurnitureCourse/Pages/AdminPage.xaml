<Page x:Class="FurnitureCourse.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FurnitureCourse.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Админская панель">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Категории" x:Name="CategoryBtn" Click="CategoryBtn_Click"/>
            <Button Content="Материалы" x:Name="MaterialBtn" Click="MaterialBtn_Click"/>
            <Button Content="Мебель" x:Name="FurnitureBtn" Click="FurnitureBtn_Click"/>
            <Button Content="Производитель" x:Name="ManufacturerBtn" Click="ManufacturerBtn_Click"/>
            <Button Content="Пользователи" x:Name="UserBtn" Click="UserBtn_Click"/>
            <Button Content="Выйти" x:Name="LogOutBtn" Click="LogOutBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
